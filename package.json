{
  "name": "format-html-in-php",
  "displayName": "Format HTML in PHP",
  "description": "Provides formatting for the HTML code in PHP files using JSbeautify - Works well paired with a PHP formatting extension",
  "version": "1.4.0",
  "publisher": "rifi2k",
  "repository": {
    "url": "https://github.com/RiFi2k/format-html-in-php"
  },
  "license": "Unlicense",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.25.0"
  },
  "categories": [
    "Other",
    "Programming Languages",
    "Formatters"
  ],
  "keywords": [],
  "contributes": {
    "configurationDefaults": {
      "[php]": {
        "editor.formatOnSave": true
      }
    },
    "commands": [
      {
        "command": "formatHtmlInPhp.format",
        "title": "Format HTML in PHP"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "formatHtmlInPhp.format",
          "when": "editorLangId == php"
        }
      ],
      "editor/context": [
        {
          "command": "formatHtmlInPhp.format",
          "when": "editorLangId == php"
        }
      ]
    },
    "keybindings": [
      {
        "command": "formatHtmlInPhp.format",
        "key": "ctrl+alt+f",
        "when": "editorLangId == php"
      }
    ]
  },
  "activationEvents": [
    "onLanguage:php"
  ],
  "main": "./out/extension",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "devDependencies": {
    "typescript": "^3.2.2",
    "vscode": "^1.1.26",
    "tslint": "^5.12.0",
    "@types/node": "^10.12.18"
  },
  "dependencies": {
    "js-beautify": "^1.8.9",
    "lodash.get": "^4.4.2",
    "lodash.has": "^4.5.2"
  }
}
